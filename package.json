{
  "name": "boos",
  "version": "1.0.0",
  "description": "Simple state management library, which make use of a observer object alonside with React to share state between components",
  "main": "./dist",
  "module": "./lib-esm",
  "types": "./dist/index.d.ts",
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "build": "tsc && tsc --build tsconfig.esm.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint './src/**/*{.js,.jsx,.ts,.tsx}' --quiet --fix",
    "format": "prettier --write './src/**/*.{js,ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alejogs4/boos.git"
  },
  "keywords": [
    "StateManagement",
    "Javascript",
    "React",
    "ObserverPattern",
    "Hooks"
  ],
  "author": "Alejandro Garc√≠a Serna <alejogs4@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alejogs4/boos/issues"
  },
  "homepage": "https://github.com/alejogs4/boos#readme",
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "dependencies": {
    "immer": "^9.0.1"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.1.2",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "jest": {
    "coverageThreshold": {
      "./src": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
